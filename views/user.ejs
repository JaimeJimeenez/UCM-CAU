<!DOCTYPE html>
<html lang = "es">
<head>
    <title> Usuario </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href = "https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link href = "https://fonts.googleapis.com/icon?family=Material+Icons" rel = "stylesheet">
    <link href = "style/user.css" rel = "stylesheet">

    <script src = "https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        console.log("Hola mundo");
    </script>
</head>
<body>
    <div class = "container-fluid">

        <%- include("header") %>

        <section>
            <nav class = "mt-5 p-3 bg-light">
                <div class = "row">
                    <div class = "col col-sm-1 col-md-1 col-xl-1">
                        <button type = "button" href = "#" class = "btn btn-primary dropdown-toggle" data-bs-toggle = "dropdown"> Nuevo Aviso </button>
                        <ul class = "dropdown-menu">
                            
                            <li>
                                <a href = "#" class = "dropdown-item" data-bs-toggle = "modal" data-bs-target = "#newNotice"> Sugerencia </a>
                            </li>   
                            
                            <li>
                                <a href = "#" class = "dropdown-item" data-bs-toggle = "modal" data-bs-target = "#newNotice"> Incidencia </a>
                            </li>
                            
                            <li>
                                <a href = "#" class = "dropdown-item" data-bs-toggle = "modal" data-bs-target = "#newNotice"> Felicitación </a>
                            </li>

                        </ul>
                    </div>

                    <div class = "col col-sm-1 col-md-1 col-xl-1 text-center">
                        <a href = "/#myNotices" class = "nav-link navNotices"> Mis Avisos </a>
                    </div>

                    <div class = "col col-sm-2 col-md-2 col-xl-2 text-center">
                        <a href = "/#noticesHistorical" class = "nav-link navNotices"> Histórico de Avisos </a>
                    </div>

                    <div class = "col offset-5 col-sm-3 col-md-3 col-xl-3">

                        <form method = "GET" action = "/search">
                            <div class = "row">
                                <div class = "col col-sm-9 col-md-9 col-xl-9">
                                    <input type = "text" class = "form-control" placeholder = "Search">
                                </div>
                                <div class = "col col-sm-2 col-md-2 col-xl-2">
                                    <button type = "submit" class = "btn btn-primary" id = "btnNotice"> Buscar </button>
                                </div>
                            </div>
                        </form>                            
                       
                    </div>
                </div>
            </nav>
        </section>

        <section>
            <div id = "myNotices">
                <div class = "table-responsive">
                    <table class = "table-hover text-center w-100">
                        <thead>
                            <tr>
                                <th> Tipo </th>
                                <th> Fecha </th>
                                <th> Texto </th>
                                <th> Técnico </th>
                                <th> Acciones </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% notices.forEach((notice) => { %>
                                <% if (!notice.Done) {%>
                                <tr>
                                    <td> <%= notice.Type %> </td>
                                    <td> <%= notice.Date %> </td>
                                    <td> <%= notice.Text %></td>
                                    <td> <%= notice.Technical %> </td> 
                                    <td> 
                                        <button type = "button" href = "/getNotices/<% notice.Id %>" class = "btn btn-secondary material-icons" data-bs-toggle = "modal" data-bs-target = "#showNotice">
                                            visibility 
                                        </button>
                                    </td>
                                </tr>
                            <% }}); %>
                        </tbody>
                    </table>    
                </div>
            </div>
        </section>

        <section>
            <%- include("noticesHistorical") %>
        </section>

        <section>
            <div class = "modal fade" id = "newNotice">
                <div class = "modal-dialog modal-xl modal-dialog-centered">
                    <div class = "modal-content">

                        <div class = "modal-header justify-content-center align-items-center text-center text-bg-light">
                            <h6> Nuevo aviso </h6>
                        </div>

                        <form method = "POST" action = "newNotice">

                            <div class = "modal-body">
                                <div class = "form-group row align-items-center d-flex justify-content-center">
                                
                                    <div class = "col col-sm-1 col-md-1 col-xl-1 text-center">
                                        <label for = "function"> Función: </label>
                                    </div>
    
                                    <div class = "col col-sm-3 col-md-3 col-xl-3">
                                        <select name = "function" class = "form-control form-select" id = "functions">
                                            <option value = ""> </option>
                                            <option value = "administration">Administración Digital </option>
                                            <option value = "comunications"> Comunicaciones </option>
                                            <option value = "conectivity"> Conectividad </option>
                                            <option value = "docency"> Docencia </option>
                                            <option value = "web"> Web </option>
                                        </select>
                                    </div>
                                    
                                    <div class = "col col-sm-1 col-md-1 col-xl-1">
                                        <label for = "description"> Descripción: </label>
                                    </div>
    
                                    <div class = "col col-sm-3 col-md-3 col-xl-3">
                                        <select name = "description" id = "" class = "form-control form-select">
                                            <option value = ""> </option>
                                        </select>
                                    </div>
                                </div>

                                <div class = "row">
                                    Textarea
                                </div>
                            </div>
                        
                            <div class = "modal-footer">
                                <button type = "submit" class = "material-icons btn btn-primary" id = "newNotice"> send </button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </section>

       

        <section>
            <div class = "modal fade" id = "showNotice">
                <div class = "modal-dialog modal-dialog-centered">
                    <div class = "modal-content">

                        <div class = "modal-header">
                            <h5> Hola </h5>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        
    </script>
</body>
</html>