<header>
    <div class = "p-2 d-flex justify-content-between align-items-center bg-light">
        
        <div id = "logo">
            <a href = "#">
                <img src = "/images/logo.png" alt = "Logo de la Universidad Complutense de Madrid">
            </a>
        </div>

        <div class = "text-center" id = "title">
            <h3> UCM - CAU </h3>
            <h6> Centro de Atenci√≥n al Usuario </h6>
        </div>

        <div class = "d-flex justify-content-center align-items-center" id = "user">
            <div id = "image">
                <% if (user.Image) { %>
                    <img src = "/user/image/<%=user.id%>" alt = "Imagen de usuario" class = "rounded-circle">
                <%} else { %>
                    <span class = "material-icons rounded-circle"> question_mark </span>
                <%}%>
            </div>
            <div>
                <a href = "#" class = "text-decoration-none" id = "name" data-bs-toggle = "modal" data-bs-target = "#profile">
                    <%= user.Email %>
                </a>
            </div>
            <div>
                <a href = "logout" class = "material-icons text-decoration-none rounded-circle" id = "logout">logout</a>
            </div>
        </div>
    </div>
</header>

